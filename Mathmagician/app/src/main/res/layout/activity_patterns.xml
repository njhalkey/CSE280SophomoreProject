<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Patterns">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtDir"
        android:id="@+id/lblDir"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtSeq"
        android:id="@+id/lblSeq"
        android:layout_marginTop="151dp"
        android:layout_below="@+id/lblDir"
        android:layout_alignLeft="@+id/lblDir"
        android:layout_alignStart="@+id/lblDir"
        android:layout_marginLeft="180dp"
        android:layout_marginStart="180dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtAnswer"
        android:id="@+id/lblAns"
        android:layout_alignTop="@+id/lblSeq"
        android:layout_alignRight="@+id/lblDir"
        android:layout_alignEnd="@+id/lblDir"
        android:layout_marginRight="75dp"
        android:layout_marginEnd="75dp"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:background="#ff0d01" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtAns1"
        android:id="@+id/lblAns1"
        android:width="100dp"
        android:minHeight="100dp"
        android:background="#1a00ff"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="500dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtAns2"
        android:id="@+id/lblAns2"
        android:minHeight="100dp"
        android:width="100dp"
        android:background="#1a00ff"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="500dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtAns3"
        android:id="@+id/lblAns3"
        android:width="100dp"
        android:minHeight="100dp"
        android:background="#1a00ff"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="500dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtAns4"
        android:id="@+id/lblAns4"
        android:minHeight="100dp"
        android:width="100dp"
        android:background="#1a00ff"
        android:layout_marginLeft="700dp"
        android:layout_marginTop="500dp"
        android:visibility="visible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblWrong"
        android:layout_marginLeft="455dp"
        android:layout_marginTop="300dp"
        android:visibility="invisible"
        android:width="300dp"
        android:minHeight="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblRight"
        android:layout_marginLeft="455dp"
        android:layout_marginTop="300dp"
        android:width="300dp"
        android:visibility="invisible"
        android:minHeight="100dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Exitbtn"
        android:id="@+id/btnExit"
        android:layout_alignTop="@+id/lblAns2"
        android:layout_toRightOf="@+id/lblAns2"
        android:width="100dp" />
</RelativeLayout>
