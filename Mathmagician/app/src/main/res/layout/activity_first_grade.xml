<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mathmagiciancom.mathmagician.FirstGrade">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/btnHome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="532dp"
        android:layout_marginStart="532dp"
        android:layout_marginTop="600dp"
        android:longClickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fractions"
        android:id="@+id/btnFractions"
        android:layout_marginTop="125dp"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="532dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Money"
        android:id="@+id/btnMoney"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="532dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number Sense"
        android:id="@+id/btnNumberSense"
        android:layout_marginLeft="532sp"
        android:layout_marginStart="532dp"
        android:layout_marginTop="325sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patterns"
        android:id="@+id/btnPatterns"
        android:layout_marginLeft="532dp"
        android:layout_marginTop="425dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clock"
        android:id="@+id/btnClock"
        android:layout_alignParentTop="false"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="532dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shapes"
        android:id="@+id/btnShapes"
        android:layout_marginLeft="532dp"
        android:layout_marginTop="515dp" />

</RelativeLayout>
