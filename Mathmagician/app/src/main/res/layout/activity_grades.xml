<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mathmagiciancom.mathmagician.Grades"
    android:id="@+id/grades">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Grade"
        android:id="@+id/btn1st"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn2nd"
        android:layout_alignStart="@+id/btn2nd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Grade"
        android:id="@+id/btn2nd"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/btn1st"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Third Grade"
        android:id="@+id/btn3rd"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/btn2nd"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fourth Grade"
        android:id="@+id/btn4th"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn3rd"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fifth Grade"
        android:id="@+id/btn5th"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btn4th"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/btnHome"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
